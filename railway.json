{
    "$schema": "https://railway.app/railway.schema.json",
    "services": {
        "backend": {
            "source": {
                "directory": "backend"
            },
            "deploy": {
                "healthcheckPath": "/api/auth/login",
                "restartPolicyType": "ON_FAILURE"
            }
        },
        "frontend": {
            "source": {
                "directory": "frontend"
            }
        }
    }
}